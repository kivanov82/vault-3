// Prisma schema for Vault-3 Phase 1 Copytrading

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

// Raw fills from Hyperliquid (for TWAP detection)
model Fill {
  id              String   @id @default(uuid())
  fillId          String   @unique  // Hyperliquid fill ID
  timestamp       DateTime
  traderAddress   String
  symbol          String
  side            String   // 'B' or 'A' (buy/sell)
  price           Float
  size            Float
  positionSzi     Float    // Signed size after fill

  // TWAP aggregation
  aggregateTradeId String?
  isFirstFill     Boolean  @default(false)
  isLastFill      Boolean  @default(false)

  // Raw data
  rawData         Json

  createdAt       DateTime @default(now())

  @@index([traderAddress, timestamp])
  @@index([symbol, timestamp])
  @@index([aggregateTradeId])
}

// Aggregated logical trades
model Trade {
  id              String   @id @default(uuid())
  timestamp       DateTime

  // Trade details
  trader          String   // 'us' | 'target'
  traderAddress   String
  symbol          String
  side            String   // 'long' | 'short'
  entryPrice      Float
  exitPrice       Float?
  size            Float
  leverage        Float?   // Nullable - unknown for historical imports

  // Performance
  pnl             Float?
  pnlPercent      Float?
  holdTimeSeconds Int?

  // Copytrading
  isCopyTrade     Boolean  @default(false)
  targetTradeId   String?
  latencyMs       Int?
  slippageBps     Float?

  // TWAP
  isTwapOrder     Boolean  @default(false)
  fillCount       Int?
  twapDurationSeconds Int?
  avgEntryPrice   Float?
  worstSlippage   Float?

  // Market context
  btcPrice        Float?
  ethPrice        Float?
  fundingRate     Float?

  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  @@index([traderAddress, timestamp])
  @@index([symbol, timestamp])
  @@index([trader, timestamp])
}

// Market candles
model Candle {
  id         String   @id @default(uuid())
  symbol     String
  timeframe  String   // '1m' | '5m' | '15m' | '1h' | '4h' | '1d'
  timestamp  DateTime

  open       Float
  high       Float
  low        Float
  close      Float
  volume     Float

  // Technical indicators
  rsi14      Float?
  macd       Float?
  macdSignal Float?
  macdHist   Float?
  bbUpper    Float?
  bbMiddle   Float?
  bbLower    Float?
  atr14      Float?

  createdAt  DateTime @default(now())

  @@unique([symbol, timeframe, timestamp])
  @@index([symbol, timeframe, timestamp])
}

// Funding rates
model FundingRate {
  id        String   @id @default(uuid())
  symbol    String
  timestamp DateTime
  rate      Float    // Annualized percentage

  createdAt DateTime @default(now())

  @@unique([symbol, timestamp])
  @@index([symbol, timestamp])
}

// Position snapshots (for tracking our vs target)
model PositionSnapshot {
  id              String   @id @default(uuid())
  timestamp       DateTime
  traderAddress   String
  symbol          String

  side            String   // 'long' | 'short' | 'none'
  size            Float
  leverage        Float?
  entryPrice      Float?
  unrealizedPnl   Float?

  createdAt       DateTime @default(now())

  @@index([traderAddress, timestamp])
  @@index([symbol, timestamp])
}

// Pre-computed technical indicators for analysis
model TechnicalIndicator {
  id          String   @id @default(uuid())
  symbol      String
  timeframe   String   // '1h' | '4h' | '1d'
  timestamp   DateTime

  // Moving averages
  ema9        Float?
  ema21       Float?
  ema50       Float?
  ema200      Float?

  // RSI
  rsi14       Float?

  // MACD
  macd        Float?
  macdSignal  Float?
  macdHist    Float?

  // Bollinger Bands
  bbUpper     Float?
  bbMiddle    Float?
  bbLower     Float?
  bbWidth     Float?

  // Volatility
  atr14       Float?

  createdAt   DateTime @default(now())

  @@unique([symbol, timeframe, timestamp])
  @@index([symbol, timeframe, timestamp])
}

// Feature snapshots for ML training/prediction
model FeatureSnapshot {
  id          String   @id @default(uuid())
  symbol      String
  timestamp   DateTime

  // All features stored as JSON for flexibility
  features    Json

  // Label: 1 = target traded within next hour, 0 = no trade, null = unlabeled
  label       Int?

  // Direction if labeled: 1 = long, -1 = short, null = unlabeled
  direction   Int?

  createdAt   DateTime @default(now())

  @@unique([symbol, timestamp])
  @@index([symbol, timestamp])
  @@index([label])
}

// ML predictions for shadow mode validation + paper trading
model Prediction {
  id          String   @id @default(uuid())
  timestamp   DateTime
  symbol      String

  // Model output
  prediction  Float    // Score 0-100
  confidence  Float    // Confidence level
  direction   Int?     // Predicted direction: 1 = long, -1 = short
  reasons     String[] // Signals that triggered prediction

  // Paper trading
  entryPrice  Float?   // Price when prediction was made
  exitPrice   Float?   // Price at validation time
  paperPnl    Float?   // Theoretical P&L if we acted on prediction
  paperPnlPct Float?   // P&L as percentage

  // Ground truth - what copy trading actually did
  copyAction  String?  // 'open' | 'close' | 'flip' | 'adjust' | 'none'
  copySide    String?  // 'long' | 'short' | null
  copySize    Float?   // Size of copy trade

  // Validation
  actualLabel Int?     // 1 = trade happened, 0 = no trade
  correct     Boolean? // Was prediction correct?
  validatedAt DateTime? // When prediction was validated

  // Model metadata
  modelVersion String  @default("pattern-v1")
  features    Json?    // Input features used

  createdAt   DateTime @default(now())

  @@index([symbol, timestamp])
  @@index([correct])
  @@index([validatedAt])
}

// Saved analysis reports
model AnalysisReport {
  id          String   @id @default(uuid())
  type        String   // 'trading-patterns' | 'performance' | 'correlation' | etc.
  timestamp   DateTime @default(now())

  // Full report data
  data        Json

  // Human-readable summary
  summary     String?

  createdAt   DateTime @default(now())

  @@index([type, timestamp])
}

// Independent trading positions (autonomous trades based on high-confidence predictions)
model IndependentPosition {
  id                String   @id @default(uuid())
  symbol            String
  side              String   // 'long' (shorts disabled - 0% historical win rate)
  entryPrice        Float
  size              Float
  sizeUsd           Float
  leverage          Int
  tpPrice           Float    // entry * 1.08 (8% take profit)
  slPrice           Float    // entry * 0.96 (4% stop loss)
  timeoutAt         DateTime // +24h from entry
  status            String   @default("open") // open|confirmed|closed
  confirmedByTarget Boolean  @default(false)
  exitPrice         Float?
  exitReason        String?  // tp|sl|timeout|target_confirmed|target_opposite
  closedAt          DateTime?
  realizedPnl       Float?
  realizedPnlPct    Float?
  predictionScore   Float?
  predictionReasons String[]
  createdAt         DateTime @default(now())

  @@index([symbol, status])
  @@index([status])
}
